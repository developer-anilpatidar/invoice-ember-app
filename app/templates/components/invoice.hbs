{{#if editMode }}
  <td>
    {{input type="text" value=amount placeholder="Enter Amount"}}
  </td>
  <td>
    {{input type="date" value=date}}
  </td>
  <td>
    <button type="button" class="button btn-success" {{action 'updateInvoice'}}>Update</button>
    <button type="button" class="button btn-danger" {{action 'destroy'}}>Delete</button>
  </td>
{{else}}

  <td>{{amount}}</td>
  <td>{{date}}</td>
  <td>
    <button type="button" class="button btn-info" {{action 'changeEditMode'}}>Edit</button>
    <button type="button" class="button btn-danger" {{action 'destroy'}}>Delete</button>
  </td>

{{/if}}

{{yield}}